cabal-version:      3.0
-- Initial package description 'advent-of-code2025' generated by
-- 'cabal init'. For further documentation, see:
--   http://haskell.org/cabal/users-guide/
name:               advent-of-code
version:            0.1.0.0
license:            MIT
license-file:       LICENSE
author:             Raphael Meyer

common defaults
    ghc-options: -Wall -Wextra -Werror
    default-language: Haskell2010
    build-depends:
        base == 4.18.3.0,
        text

library aoc
    import:           defaults
    hs-source-dirs:   src/aoc
    exposed-modules:  AoC
    -- build-depends:

library lib-day00
    import:           defaults
    hs-source-dirs:   src/day00
    exposed-modules:  Day00
    build-depends:
        aoc

library lib-day01
    import:           defaults
    hs-source-dirs:   src/day01
    exposed-modules:  Day01
    build-depends:
        aoc

executable day00
    import:           defaults
    hs-source-dirs:   app/day00
    main-is:          Main.hs
    build-depends:
        aoc,
        lib-day00

executable day01
    import:           defaults
    hs-source-dirs:   app/day01
    main-is:          Main.hs
    build-depends:
        aoc,
        lib-day01


test-suite specs
    import:           defaults
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Spec.hs
    build-tool-depends:
        hspec-discover:hspec-discover
    other-modules:
        Day00Spec,
        Day01Spec
    build-depends:
        hspec,
        aoc,
        lib-day00,
        lib-day01
